<root BTCPP_format="4">
     <BehaviorTree ID="Main_Tree">
        <Sequence>
            <Script code=" Goal_a='1.314;0.898;1.64' " />
            <Script code=" Goal_b='1.4;-2.5;3.14' " />
            <Script code=" Goal_c='0;-1.929;4.78' " />
            <Script code=" Goal_d='0;0;0' " />
            <Fallback>
                <Sequence name="Patrol">
                    <Repeat num_cycles="2">
                        <Sequence>
                            <Delay delay_msec="3000">
                                <RetryUntilSuccessful num_attempts="2">
                                    <GoToPose name="go_to_pointA" goal="{Goal_a}" />
                                </RetryUntilSuccessful>
                            </Delay>
                            <Delay delay_msec="3000">
                                <RetryUntilSuccessful num_attempts="2">
                                    <GoToPose name="go_to_pointB" goal="{Goal_b}" />
                                </RetryUntilSuccessful>
                            </Delay>
                            <Delay delay_msec="3000">
                                <RetryUntilSuccessful num_attempts="2">
                                    <GoToPose name="go_to_pointC" goal="{Goal_c}" />
                                </RetryUntilSuccessful>
                            </Delay>
                        </Sequence>
                    </Repeat>
                    <Delay delay_msec="3000">
                        <GoToPose name="GoHome" goal="{Goal_d}" />
                    </Delay> 
                </Sequence>
                <Delay delay_msec="5000">
                    <RetryUntilSuccessful num_attempts="3">
                        <GoToPose name="GoHomeError" goal="{Goal_d}" />
                    </RetryUntilSuccessful>
                </Delay>
            </Fallback>
        </Sequence>
     </BehaviorTree>
    <TreeNodesModel>
        <Action ID="GoToPose">
            <input_port name="goal"/>           
        </Action>
    </TreeNodesModel>

 </root>